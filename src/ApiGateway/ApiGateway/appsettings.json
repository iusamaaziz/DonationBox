{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      // Authentication Service Routes
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "PathPrefix": "/api/auth" }
        ]
      },
      "users-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/users/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/users" },
          { "PathPrefix": "/api/users" }
        ]
      },
      // Donation Service Routes
      "campaigns-route": {
        "ClusterId": "donation-cluster",
        "Match": {
          "Path": "/api/campaigns/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/campaigns" },
          { "PathPrefix": "/api/campaigns" }
        ]
      },
      "donations-route": {
        "ClusterId": "donation-cluster",
        "Match": {
          "Path": "/api/donations/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/donations" },
          { "PathPrefix": "/api/donations" }
        ]
      },
      // Donor Service Routes
      "donors-route": {
        "ClusterId": "donor-cluster",
        "Match": {
          "Path": "/api/donors/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/donors" },
          { "PathPrefix": "/api/donors" }
        ]
      },
      // Payment Service Routes
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/payment/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/payment" },
          { "PathPrefix": "/api/payment" }
        ]
      },
      // Health check routes
      "health-route": {
        "ClusterId": "gateway-health",
        "Match": {
          "Path": "/health/{**remainder}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://localhost:5002"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "donation-cluster": {
        "Destinations": {
          "donation-service": {
            "Address": "http://localhost:5131"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "donor-cluster": {
        "Destinations": {
          "donor-service": {
            "Address": "http://localhost:5069"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment-service": {
            "Address": "http://localhost:5296"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "gateway-health": {
        "Destinations": {
          "gateway-health": {
            "Address": "http://localhost:5000/health"
          }
        }
      }
    }
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-256-bits-long-for-gateway!",
    "Issuer": "ApiGateway",
    "Audience": "DonationBoxServices",
    "ExpiryMinutes": 60
  },
  "CorsSettings": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:4200", "https://localhost:3000", "https://localhost:4200"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  }
}
